        "react-dom": "^16.0.0",
        "react-transition-group": "^2.2.1",
        "prop-types": "^15.6.0"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-jest": "^21.2.0",
        "babel-loader": "^7.1.2",
